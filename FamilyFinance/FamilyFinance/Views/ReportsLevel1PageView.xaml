<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FamilyFinance.Views.ReportsLevel1PageView"
             Title="Звіти">
    <StackLayout>
        <Button
            Text="Згенерувати новий звіт"
            Margin="20"
            Command="{Binding GoToGenerateReportPageCommand}"/>
        <Button
            Text="Графічні звіти"
            Margin="20,5,20,20"
            Command="{Binding GoToChartPageCommand}"/>
        <ListView HasUnevenRows="True"
                  ItemsSource="{Binding Reports}"
                  SelectedItem="{Binding SelectedReport, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <Label
                                TextColor="Black"
                                FontSize="Large"
                                Margin="10"
                                Text="{Binding Name}" />
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>