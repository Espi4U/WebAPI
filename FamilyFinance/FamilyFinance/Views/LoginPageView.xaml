<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FamilyFinance.Views.LoginPageView">
    <Grid
        HorizontalOptions="FillAndExpand"
        VerticalOptions="CenterAndExpand">
        <StackLayout Margin="20">
            <Label Text="Логін" />
            <Entry Text="{Binding Model.Login, Mode=TwoWay}" />
            <Label
                Text="{Binding LoginEM}"
                TextColor="Red" />
            <Label Text="Пароль" />
            <Entry Text="{Binding Model.Password, Mode=TwoWay}" />
            <Label
                Text="{Binding PasswordEM}"
                TextColor="Red" />
            <Button 
                Text="Пустіть Мене"
                Command="{Binding LoginCommand}" />
            <Button 
                Text="Реєстрація Нової Сім'ї"
                Command="{Binding RegistrationCommand}"
                CommandParameter="NEW"/>
            <Button
                Text="В Мене Є Ключ Доступу"
                Command="{Binding RegistrationCommand}"
                CommandParameter="NEWWITHKEY"/>
        </StackLayout>
    </Grid>
</ContentPage>